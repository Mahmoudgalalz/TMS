# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=your-secure-db-password
DB_NAME=service_tickets

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h

# Cloudflare AI Configuration
CLOUDFLARE_ACCOUNT_ID=your-cloudflare-account-id
CLOUDFLARE_API_TOKEN=your-cloudflare-api-token
AI_SECRET=your-secure-ai-secret-key

# File Upload Configuration
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,application/pdf,text/csv

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-secure-smtp-password

# Application Configuration
NODE_ENV=development
PORT=3001

# CORS Configuration (supports single URL or comma-separated list)
CORS_ORIGIN=http://localhost:5173,http://localhost:3000

# Queue Configuration
QUEUE_REDIS_URL=redis://localhost:6379

# Logging Configuration
LOG_LEVEL=info

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-secure-redis-password
